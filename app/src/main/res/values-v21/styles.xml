<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <!-- Main theme. -->
        <item name="colorPrimary">#448AFF</item>
        <item name="colorPrimaryDark">#448AFF</item>
        <item name="colorAccent">#448AFF</item>
        <item name="android:background">#ffca28</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Style for main images. -->
    <style name="mainImageStyle">
        <item name="android:src">@drawable/flaglogo</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Style for written question texts. -->
    <style name="quizQuestionMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#212121</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for radio group. -->
    <style name="radioGroupStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Style for answer text -->
    <style name="answerText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:buttonTint">#000000</item>
    </style>

    <!-- Style for EditText answer -->
    <style name="editTextAnswer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#212121</item>
        <item name="android:backgroundTint">#000000</item>
    </style>

    <!-- Style for flag images. -->
    <style name="flagStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">1dp</item>
        <item name="android:background">#000000</item>
    </style>

    <!-- Style for divider. -->
    <style name="dividerStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">#BDBDBD</item>
    </style>

    <!-- Style for submit button. -->
    <style name="submitStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">175dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
